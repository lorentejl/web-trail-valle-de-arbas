</BasePageLayout>

<style>
    .section-card {
    border-radius: 16px;
    padding: 2rem 1.5rem;
    margin: 2rem auto;
    max-width: 700px;
    width: 95%;
  }
  

  .link-highlight {
    color: #e49a69;
    font-weight: 600;
    text-decoration: underline;
    transition: color 0.2s;
  }
  .link-highlight:hover {
    color: #f97316;
  }
  
  
  @media (max-width: 600px) {
    .section-card {
      padding: 1.2rem 0.7rem;
      max-width: 100%;
    }
    ul {
      max-width: 100%;
    }
    ul li {
      font-size: 0.95rem;
      padding-left: 1.2rem;
    }
    ul li::before {
      left: 0.2rem;
      top: 0.5rem;
      width: 8px;
      height: 8px;
    }
  }
  @media (min-width: 1024px) {
    .info-text {
      font-size: 1.1rem;
    }
    ul li {
      font-size: 1.1rem;
    }
  }
</style>
